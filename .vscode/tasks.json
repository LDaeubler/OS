{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build gcc",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",
          "-o",
          "build/${fileBasenameNoExtension}",
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ]
      },
      {
        "label": "run c program",
        "type": "shell",
        "command": "build\\${fileBasenameNoExtension}.exe",
        "dependsOrder": "sequence",
        "dependsOn": [
          "build gcc"
        ],
        "args": [
          ""
        ],
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "clear": true
        },
        "problemMatcher": []
      },
      {
        "label": "build c++",
        "type": "shell",
        "command": "g++",
        "args": [
          "-o",
          "build/${fileBasenameNoExtension}",
          "${relativeFileDirname}/*.cpp"
        ],
        "group": "build",
        "problemMatcher": [
          "$gcc"
        ]
      },
      {
        "label": "run c++ program",
        "type": "shell",
        "command": "build\\${fileBasenameNoExtension}.exe",
        "dependsOrder": "sequence",
        "dependsOn": [
          "build c++"
        ],
        "args": [
          ""
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "clear": true
        },
        "problemMatcher": []
      }
    ]
  }